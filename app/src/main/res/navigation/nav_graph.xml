<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.balanz.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_transaction"
            app:destination="@id/transactionFragment" />
        <action
            android:id="@+id/action_home_to_statistics"
            app:destination="@id/statisticsFragment" />
        <action
            android:id="@+id/action_home_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.example.balanz.ui.transaction.TransactionFragment"
        android:label="Transactions">
        <action
            android:id="@+id/action_transaction_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_transaction_to_statistics"
            app:destination="@id/statisticsFragment" />
        <action
            android:id="@+id/action_transaction_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.balanz.ui.statistics.StatisticsFragment"
        android:label="Statistics">
        <action
            android:id="@+id/action_statistics_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_statistics_to_transaction"
            app:destination="@id/transactionFragment" />
        <action
            android:id="@+id/action_statistics_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.balanz.ui.settings.SettingsFragment"
        android:label="Settings">
        <action
            android:id="@+id/action_settings_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_settings_to_transaction"
            app:destination="@id/transactionFragment" />
        <action
            android:id="@+id/action_settings_to_statistics"
            app:destination="@id/statisticsFragment" />
    </fragment>

</navigation>