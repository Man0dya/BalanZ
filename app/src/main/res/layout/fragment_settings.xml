<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="@android:color/white">

        <!-- Vertical guideline for left-aligning all buttons -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="8dp" />

        <!-- Monthly Budget Input -->
        <EditText
            android:id="@+id/editBudget"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@android:drawable/edit_text"
            android:hint="@string/monthly_budget"
            android:padding="12dp"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Currency Selector -->
        <Spinner
            android:id="@+id/spinnerCurrency"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/btn_dropdown"
            app:layout_constraintTop_toBottomOf="@id/editBudget"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Budget Progress Label -->
        <TextView
            android:id="@+id/text_budget_progress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/budget_progress_"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerCurrency"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBudget"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:max="100"
            android:progress="0"
            android:layout_marginTop="8dp"
            android:progressDrawable="@android:drawable/progress_horizontal"
            app:layout_constraintTop_toBottomOf="@id/text_budget_progress_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Percentage Text -->
        <TextView
            android:id="@+id/textBudgetProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0_"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/progressBudget"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Budget Details -->
        <TextView
            android:id="@+id/textBudgetDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0_00_0_00_"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/progressBudget"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Save Settings Button -->
        <Button
            android:id="@+id/buttonSaveSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/save_settings"
            app:layout_constraintTop_toBottomOf="@id/textBudgetProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dark Mode Switch -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_mode"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/buttonSaveSettings"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Change PIN -->
        <Button
            android:id="@+id/buttonChangePin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/change_pin"
            app:layout_constraintTop_toBottomOf="@id/switchTheme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Backup Data -->
        <Button
            android:id="@+id/buttonBackup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/backup_data"
            app:layout_constraintTop_toBottomOf="@id/buttonChangePin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Restore Data -->
        <Button
            android:id="@+id/buttonRestore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/restore_data"
            app:layout_constraintTop_toBottomOf="@id/buttonBackup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Export Transactions -->
        <Button
            android:id="@+id/buttonExportPdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/export_transactions_as_pdf"
            app:layout_constraintTop_toBottomOf="@id/buttonRestore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
